{% extends 'admin/base.html.twig' %}

{% block body %}

    <div class="panel panel-default">

        <div class="panel-heading">

            <h2 class="pull-left"><i
                        class="glyphicon glyphicon-list-alt"></i> {{ 'admin.profile_admin.title.list'|trans }}</h2>

            <div class="pull-right" style="padding-top: 20px;">

                <a href="{{ path('admin_profile_new') }}" class="btn btn-primary">
                    <span class="glyphicon glyphicon-plus"></span> {{ 'admin.profile_admin.action.new_profile'|trans }}
                </a>

            </div>

            <div class="clearfix"></div>

        </div>

        <div class="panel-body">

            <form class="navbar-form navbar-left" role="search" style="padding-left: 0" method="get"
                  action="{{ path('admin_profile_index') }}">

                <div class="form-group">
                    <input type="text" class="form-control" placeholder="{{ 'form.placeholder.search'|trans }}"
                           name="search"
                           value="{% if app.request.query.has('search') %}{{ app.request.query.get('search') }}{% endif %}">
                </div>

                <button type="submit" class="btn btn-default">{{ 'form.submit_actions.search'|trans }}</button>

            </form>

            <div class="clearfix"></div>

            <hr>

            {{ include('admin/partials/alerts.html.twig') }}

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>
                            {{ 'admin.profile_admin.fields.full_name'|trans }}
                        </th>
                        <th>
                            <a href="{{ path('admin_profile_index') ~ pagination_helper.buildQuery ~ pagination_helper.sortingFieldQuery('email') }}">
                                {{ 'admin.profile_admin.fields.email'|trans }}
                            </a>
                        </th>
                        <th>
                            <a href="{{ path('admin_profile_index') ~ pagination_helper.buildQuery ~ pagination_helper.sortingFieldQuery('user.lastLoginAt') }}">
                                {{ 'admin.profile_admin.fields.last_login'|trans }}
                            </a>
                        </th>
                        <th>{{ 'admin.profile_admin.fields.created_at'|trans }}</th>
                        <th>{{ 'table.actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for profile in profiles %}
                        <tr>
                            <td>{{ profile.firstName }} {{ profile.lastName }}</td>
                            <td>{{ profile.email }}</td>
                            <td>{% if profile.user.lastLoginAt %}{{ profile.user.lastLoginAt|date('d/m/Y H:i') }}{% endif %}</td>
                            <td>{{ profile.user.createdAt|date('d/m/Y H:i') }}</td>
                            <td>
                                <div class="item-actions">
                                    <a href="#" class="btn btn-sm btn-default">
                                        {{ 'action.show'|trans }}
                                    </a>

                                    <a href="#" class="btn btn-sm btn-primary">
                                        <i class="glyphicon glyphicon-edit"></i> {{ 'action.edit'|trans }}
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" align="center">{{ 'admin.profile_admin.not_found'|trans }}</td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>

            <div class="navigation text-center">
                {{ pagerfanta(profiles, 'twitter_bootstrap3', { routeName: 'admin_profile_index', routeParams: app.request.query.all }) }}
            </div>

        </div>

    </div>

{% endblock %}