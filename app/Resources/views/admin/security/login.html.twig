{% extends 'admin/base.html.twig' %}

{% block body %}

    <h3>Login</h3>

    <div class="row">
        <div class="col-lg-6">

            {{ include('admin/partials/alerts.html.twig') }}

            {{ form_start(form, { 'action': path('admin_security_login_check') }) }}

            {{ form_row(form.email, {'attr':{'value': last_username }}) }}
            {{ form_row(form.password) }}

            <button class="btn btn-primary">{{ 'security.login.btns.login'|trans }}</button>

            <a class="pull-right" href="{{ path('admin_security_resetting_request') }}">
                {{ 'security.login.links.forgot_password'|trans }}
            </a>

            {{ form_widget(form._token) }}

            {{ form_end(form, {'render_rest': false}) }}

        </div>
    </div>

{% endblock %}

